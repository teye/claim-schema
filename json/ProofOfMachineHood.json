{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "$metadata": {
      "uris": {
        "jsonLdContext": "https://raw.githubusercontent.com/teye/claim-schema/main/json-ld/ProofOfMachineHood.jsonld",
        "jsonSchema": "https://raw.githubusercontent.com/teye/claim-schema/main/json/ProofOfMachineHood.json"
      }
    },
    "required": [
      "@context",
      "id",
      "type",
      "issuanceDate",
      "credentialSubject",
      "credentialSchema",
      "credentialStatus",
      "issuer"
    ],
    "properties": {
      "@context": {
        "type": [
          "string",
          "array",
          "object"
        ]
      },
      "id": {
        "type": "string"
      },
      "type": {
        "type": [
          "string",
          "array"
        ],
        "items": {
          "type": "string"
        }
      },
      "issuer": {
        "type": [
          "string",
          "object"
        ],
        "format": "uri",
        "required": [
          "id"
        ],
        "properties": {
          "id": {
            "type": "string",
            "format": "uri"
          }
        }
      },
      "issuanceDate": {
        "type": "string",
        "format": "date-time"
      },
      "expirationDate": {
        "type": "string",
        "format": "date-time"
      },
      "credentialSchema": {
        "type": "object",
        "required": [
          "id",
          "type"
        ],
        "properties": {
          "id": {
            "type": "string",
            "format": "uri"
          },
          "type": {
            "type": "string"
          }
        }
      },
      "subjectPosition": {
        "type": "string",
        "enum": [
          "none",
          "index",
          "value"
        ]
      },
      "merklizationRootPosition": {
        "type": "string",
        "enum": [
          "none",
          "index",
          "value"
        ]
      },
      "revNonce": {
        "type": "integer"
      },
      "version": {
        "type": "integer"
      },
      "updatable": {
        "type": "boolean"
      },
      "credentialSubject": {
        "type": "object",
        "required": [
          "id",
          "device",
          "aaguid",
          "attestationHash",
          "attested",
          "attestDate"
        ],
        "properties": {
          "id": {
            "title": "Credential Subject ID",
            "type": "string",
            "format": "uri"
          },
          "device": {
            "description": "type of device name",
            "title": "Device name or ID",
            "type": "string"
          },
          "aaguid": {
            "description": "128-bit identifier indicating the key type, make and model",
            "title": "AAGUID",
            "type": "string"
          },
          "attestationHash": {
            "description": "attestation transaction hash",
            "title": "Attestation Hash",
            "type": "string"
          },
          "attested": {
            "description": "whether the device is attested",
            "title": "IsAttested",
            "type": "boolean"
          },
          "attestDate": {
            "description": "date the device is attested",
            "title": "Attested Date",
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }